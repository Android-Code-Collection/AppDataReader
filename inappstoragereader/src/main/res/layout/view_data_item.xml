<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/database_item_height"
    android:layout_marginLeft="@dimen/database_item_margin"
    android:layout_marginRight="@dimen/database_item_margin"
    android:id="@+id/item_database_container"
    android:layout_marginTop="@dimen/database_item_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/icon_database"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/database_item_text_marginLeft"
            android:src="@drawable/database" />

        <TextView
            android:id="@+id/text_database_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/database_item_text_marginLeft"
            android:layout_toRightOf="@+id/icon_database"
            android:textSize="@dimen/database_item_text_size"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>