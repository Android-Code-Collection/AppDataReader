<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/item_table_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/database_item_height"
    android:layout_marginLeft="@dimen/database_item_margin"
    android:layout_marginRight="@dimen/database_item_margin"
    android:layout_marginTop="@dimen/database_item_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <TextView
            android:id="@+id/shared_preferences_data_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="DateType"
            android:gravity="center"
            android:textColor="@android:color/secondary_text_light"
            android:layout_weight="250" />
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="#323232"/>

        <TextView
            android:id="@+id/shared_preferences_key"
            android:layout_width="0dp"
            android:text="Key"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@android:color/secondary_text_light"
            android:layout_weight="250" />


        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="#323232"/>
        <TextView
            android:id="@+id/shared_preferences_value"
            android:layout_width="0dp"
            android:text="Value"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:textColor="@android:color/secondary_text_light"
            android:layout_weight="500" />



    </LinearLayout>

</android.support.v7.widget.CardView>