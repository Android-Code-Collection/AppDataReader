<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/item_table_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/shared_preference_item_min_height">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">


        <TextView
            style="@style/SharedPreferenceHeaderTextViewStyle"
            android:layout_height="wrap_content"
            android:layout_width="@dimen/sharedpreferences_key_width"
            android:text="@string/sharedPreference_key" />


        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#323232" />

        <TextView
            style="@style/SharedPreferenceHeaderTextViewStyle"
            android:layout_height="wrap_content"
            android:layout_width="@dimen/sharedpreferences_value_width"
            android:text="@string/sharedPreference_value" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#323232" />

        <TextView
            style="@style/SharedPreferenceHeaderTextViewStyle"
            android:layout_width="@dimen/sharedpreferences_type_width"
            android:text="@string/sharedPreference_type"
            android:layout_height="wrap_content" />



    </LinearLayout>
</android.support.v7.widget.CardView>