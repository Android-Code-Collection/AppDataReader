<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/item_table_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/shared_preference_item_min_height"
    android:layout_marginLeft="@dimen/database_item_margin"
    android:layout_marginRight="@dimen/database_item_margin"
    android:layout_marginTop="@dimen/database_item_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <TextView
            android:id="@+id/shared_preferences_key"
            android:layout_width="@dimen/sharedpreferences_key_width"
            android:layout_height="wrap_content"
            android:gravity="center"
            style="@style/AppItemTextViewStyle" />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#323232" />

        <TextView
            android:id="@+id/shared_preferences_value"
            android:layout_width="@dimen/sharedpreferences_value_width"
            android:layout_height="wrap_content"
            style="@style/AppItemTextViewStyle"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#323232" />

        <TextView
            android:id="@+id/shared_preferences_data_type"
            android:layout_height="wrap_content"
            android:layout_width="@dimen/sharedpreferences_type_width"
            style="@style/AppItemTextViewStyle"/>


    </LinearLayout>

</android.support.v7.widget.CardView>